# ALIASES
##########################################
# zsh/oh-my-zsh aliasies
##########################################
alias zshconfig="nvim ~/.zshrc"
alias ohmyzsh="nvim ~/.oh-my-zsh"
alias p10k="nvim ~/.zsh_files/.p10k.zsh"
##########################################
# Vim to Nvim
##########################################
alias vi="nvim"
alias vim="nvim"

##########################################
#CONFIGS/DOTFILES
##########################################
#Neovim Config File
alias int="nvim ~/.config/nvim/init.vim"
#tmux Config File 
alias tconfig="nvim ~/.tmux.conf"

##########################################
# Desktop alias
##########################################
alias CB="~/Desktop/CookBooks"
alias todo="nvim ~/Desktop/TODOS/ToDayToDo.txt"
alias TD="~/Desktop/TODOS"

##########################################
#Repositories
##########################################
#Github Dotfiles README.md
alias Dotme="nvim ~/Desktop/MyDotfiles/README.md"
alias Dotdir="~/Desktop/MyDotfiles"
##########################################
# Easier Navigation aliases
##########################################
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

##########################################
# Open Neovim Pluging Dir aliases
##########################################
alias P="cd ~/.config/nvim/plugged"


